  <script>
    const link = "https://1024terabox.com/s/1nIPl47TbA2leOP5b4GBmqw";
    let timeLeft = 10;
    const countdown = document.getElementById("countdown");
    const btn = document.getElementById("watchNow");

    // Popunder function
    function openPopunder() {
      window.open('https://example-popunder.com', '_blank', 'width=1,height=1,left=-1000,top=-1000');
    }

    // Countdown logic
    const timer = setInterval(() => {
      timeLeft--;
      countdown.textContent = timeLeft;
      if (timeLeft <= 0) {
        clearInterval(timer);
        openPopunder(); // Trigger popunder
        window.location.href = link;
      }
    }, 1000);

    // Watch Now button
    btn.addEventListener("click", () => {
      openPopunder(); // Trigger popunder
